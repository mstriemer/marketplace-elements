@import 'bower_components/marketplace-frontend/src/media/css/lib/colors';
@import 'bower_components/marketplace-frontend/src/media/css/lib/layout';

.mkt-cloak {
    display: none;
}

.mkt-banner {
    background: $dark-gray;
    color: $white;
    display: block;
    line-height: 1.3;
    overflow: hidden;
    position: relative;
}

.mkt-banner-content {
    margin: 2px auto;
    max-width: $max-site-width;
    position: relative;
    text-align: center;


    .mkt-banner-close,
    .mkt-banner-close:hover,
    .mkt-banner-close:active {
        background: none;
    }

    .mkt-banner-close {
        color: $greyscale-light-grey;
        font-size: 30px;
        line-height: 1;
        margin: 0;
        padding: 0;
        position: absolute;
        right: 10px;
        top: calc(50% - 15px);
    }

    .mkt-banner-close:hover {
        color: $greyscale-light-grey-hover;
    }

    .mkt-banner-close:active {
        color: $greyscale-light-grey-tapped;
    }

    span {
        display: inline-block;
        margin-top: 10px;
        padding: 0;
    }

    a {
        border-radius: 5px;
        color: #fff;
        display: inline-block;
        margin: 10px;
        padding: 10px;
        text-decoration: none;

        &.spin {
            color: transparent;
            position: relative;

            &:after {
                spinner('install');
                content: "";
                display: block;
                left: unquote('calc(50% - 9px)');
                position: absolute;
                top: unquote('calc(50% - 11px)');
            }
        }
    }

    a {
        background-color: $darker-gray;

        &:hover {
            background-color: darken($darker-gray, 10%);
        }
    }
}

.mkt-banner-firefox {
    .mkt-banner-content {
        background: url("../../img/logos/firefox-64.png") no-repeat;
        background-position: 0 50%;
        background-size: 64px 60px;
        min-height: 60px;
        padding: 0 40px 0 70px;
    }
}

.mkt-banner-success {
    background: $action-success;

    .mkt-banner-content {
        font-size: 15px;
        font-weight: 500;
        padding: 0 40px;
    }

    small {
        font-size: 15px;
        font-weight: 400;
    }

    a {
        background-color: $dark-green;

        &:hover {
            background-color: darken($dark-green, 10%);
        }
    }
}

.mkt-segmented-select {
    display: none;
}

.mkt-segmented-button {
    background: $white;
    border-color: $action-positive;
    border-style: solid;
    border-width: 1px 1px 1px 0;
    color: $action-positive;
    cursor: pointer;
    outline: none;
    padding: 10px;

    &:first-of-type {
        border-radius: 5px 0 0 5px;
        border-width: 1px;
    }

    &:last-of-type {
        border-radius: 0 5px 5px 0;
    }

    &[selected] {
        background: $action-positive;
        border-color: $action-positive;
        color: $white;
    }

    &:hover {
        background: $action-positive-hover;
        border-color: $action-positive-hover;
        color: $white;
    }

    &:active {
        background: $action-positive-tapped;
        border-color: $action-positive-tapped;
        color: $white;
    }
}

.mkt-tab-control-select {
    display: none;
}

.mkt-tab-control-button {
    background: transparent;
    border-color: transparent;
    border-style: solid;
    border-width: 0 0 3px 0;
    color: $black;
    cursor: pointer;
    margin: 0 5px;
    outline: none;
    padding: 5px 0;
    text-transform: uppercase;

    &[selected] {
        border-color: $action-positive;
        color: $action-positive;
    }

    &:hover {
        border-color: $action-positive-hover;
        color: $action-positive-hover;
    }

    &:active {
        border-color: $action-positive-tapped;
        color: $action-positive-tapped;
    }
}

.mkt-tabs {
    .mkt-tab {
        display: none;

        &.mkt-tab-active {
            display: block;
        }
    }
}

@media (min-width: 1025px) {
    .mkt-banner-content {
        padding: 0;
    }
}

@media $narrower-than-desktop {
    .mkt-banner small {
        display: none;
    }
}
